{
	"name": "open-ultrahdr",
	"version": "0.1.0",
	"description": "UltraHDR (ISO 21496-1) gain map support for JavaScript/TypeScript",
	"author": "Adam Silverstein",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"ultrahdr",
		"hdr",
		"gain-map",
		"iso-21496",
		"jpeg",
		"image-processing"
	],
	"homepage": "https://github.com/adamsilverstein/lib-open-ultrahdr",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/adamsilverstein/lib-open-ultrahdr.git",
		"directory": "js"
	},
	"bugs": {
		"url": "https://github.com/adamsilverstein/lib-open-ultrahdr/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"files": [
		"src",
		"dist",
		"*.md"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"dev": "tsup src/index.ts --format cjs,esm --dts --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src __tests__",
		"lint:fix": "eslint src __tests__ --fix"
	},
	"dependencies": {
		"open-ultrahdr-wasm": "^0.1.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@types/node": "^25.1.0",
		"@vitest/coverage-v8": "^4.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite-plugin-top-level-await": "^1.6.0",
		"vite-plugin-wasm": "^3.5.0",
		"vitest": "^4.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
